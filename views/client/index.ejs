<%- include("../global/header.ejs") %> 
<div class="row">
    <div class="col">
        <div>
            <h1>Listes des clients</h1>
            <div class="form-group">
                <input type="text" id="filterClient" class="form-control" placeholder="Filtrer le tableau"/>
            </div>
            <table class="table table-striped">
                <thead class="<%= matricule[0]+matricule[1] === "VB" ? "bg-primary" : "bg-warning" %> text-white">
                    <th>id</th>
                    <th>Nom</th>
                    <th>code_client</th>
                    <th>lien facebook</th>
                    <th>contact</th>
                    <th></th>
                </thead>
                <tbody id="tabClient">
                    <% clients.map((client) => { %>
                        <tr>
                            <td><%= client.id_c %> </td>
                            <td><%= client.nom_c %> </td>
                            <td><%= client.code_client %> </td>
                            <td><%= client.lienfb_c %> </td>
                            <td><%= client.contact_c %> </td>
                            <!--<td><a href="#" class="btn <%= matricule[0]+matricule[1] === "VB" ? "btn-primary" : "btn-warning" %>"><i class="fa fa-info"></i></a></td> -->
                        </tr>
                    <% }) %>  
                </tbody>
            </table>
            <div class="row">
                <div class="col-5 m-auto">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="/clients/<%= id<=0 ? 0: id-1 %> ">Previous</a></li>
                        <% for(let i = 1; i <= page_count+1; i++) { %>
                            <li class="page-item <%= id+1 == i && 'active' %> "><a class="page-link" href="/clients/<%= i-1 %> "><%= i %> </a></li>
                        <% } %>  
                        <li class="page-item"><a class="page-link" href="/clients/<%= id == page_count ? id:id+1 %> ">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6"></div>
            <div class="col-6"></div>
        </div>
    </div>
</div>
<%- include("../global/footer.ejs") %> 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MAGESTI - Login</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/fonts/fontawesome4/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="back">
    <div class="container">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4 p-4 bg-light form-login">
                <div>
                    <h2 class="text-center"><i class="fa fa-lock"></i>&nbsp;Login</h2>
                    <%- include("../global/msgFlash.ejs") %> 
                    <form action="/personnel/authentication" method="post">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                              <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            <input type="text" name="matricule" class="form-control" />
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                              <span class="input-group-text"><i class="fa fa-key"></i></span>
                            </div>
                            <input type="password" name="mdp" class="form-control" />
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">connexion</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
    
    <script src="/js/jquery.3.2.1.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>